include "manifest.fbs";

// Schema for the value of collection system events

namespace Collections.VB;

table Collection {
    id:FlatbufferManifestGID;
    scopeId:uint;
    collectionId:uint;
    ttlValid:bool;
    maxTtl:uint;
    name:string;
}

table DroppedCollection {
   id:FlatbufferManifestGID;
   scopeId:uint;
   collectionId:uint;
}

table Scope {
    id:FlatbufferManifestGID;
    scopeId:uint;
    name:string;
}

table DroppedScope {
    id:FlatbufferManifestGID;
    scopeId:uint;
}

root_type Collection;
root_type DroppedCollection;
root_type Scope;
root_type DroppedScope;